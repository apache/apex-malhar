<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>

  <files>
    <!--file>
        <source>${basedir}/../CHANGELOG.md</source>
        <destName>/CHANGELOG.txt</destName>
        <fileMode>644</fileMode>
    </file-->
  </files>
  <fileSets>
    <fileSet>
      <directory>${basedir}/conf</directory>
      <outputDirectory>/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/lib</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <scope>runtime</scope>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>${project.groupId}:${project.artifactId}:jar</include>
        <include>org.jruby:jruby-core:jar</include>
        <include>com.github.jnr:jnr-posix:jar</include>
        <include>com.headius:options:jar</include>
        <include>org.jruby.jcodings:jcodings:jar</include>
        <include>com.github.jnr:jnr-constants:jar</include>
        <include>org.jruby.joni:joni:jar</include>
        <include>org.jruby.extras:bytelist:jar</include>
        <include>com.github.jnr:jnr-ffi:jar</include>
        <include>joda-time:joda-time:jar</include>
        <include>org.ow2.asm:asm-commons:jar:4.0</include>
        <include>com.datastax.cassandra:cassandra-driver-core:jar</include>
        <include>com.codahale.metrics:metrics-core:jar</include>
        <include>com.aerospike:aerospike-client:jar</include>
        <include>org.gnu:gnu-crypto:jar</include>
        <include>org.luaj:luaj-jse:jar</include>
      </includes>
    </dependencySet>
  </dependencySets>
    
</assembly>
